<config>
    <modules>
        <Fcontrol_Payu>
            <version>0.1.15</version>
        </Fcontrol_Payu>
    </modules>
    <global>
        <blocks>
            <fcontrol>
                <class>Fcontrol_Payu_Block</class>
            </fcontrol>
            <adminhtml>
                <rewrite>
                    <sales_order>Fcontrol_Payu_Block_Adminhtml_Sales_Order</sales_order>
                    <sales_order_grid>Fcontrol_Payu_Block_Adminhtml_Sales_Order_Grid</sales_order_grid>
                    <sales_order_view_info>Fcontrol_Payu_Block_Adminhtml_Sales_Order_View_Info</sales_order_view_info>
                </rewrite>
            </adminhtml>
        </blocks>
        <models>
            <fcontrol>
                <class>Fcontrol_Payu_Model</class>
            </fcontrol>
        </models>
        <helpers>
            <fcontrol>
                <class>Fcontrol_Payu_Helper</class>
            </fcontrol>
        </helpers>
        <events>
            <controller_front_init_before>
                <observers>
                    <fcontrol>
                        <type>singleton</type>
                        <class>fcontrol/observer</class>
                        <method>controllerFrontInitBefore</method>
                    </fcontrol>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <frontend>
        <routers>
            <fcontrol>
                <use>standard</use>
                <args>
                    <module>Fcontrol_Payu</module>
                    <frontName>fcontrol</frontName>
                </args>
            </fcontrol>
        </routers>
        <events>
            <sales_order_save_analyse_transaction>
                <observers>
                    <fcontrol_observer>
                        <class>fcontrol/observer</class>
                        <method>queueOrder</method>
                    </fcontrol_observer>
                </observers>
            </sales_order_save_analyse_transaction>
            <sales_order_save_queue_transaction>
                <observers>
                    <fcontrol_observer>
                        <class>fcontrol/observer</class>
                        <method>queueOrder</method>
                    </fcontrol_observer>
                </observers>
            </sales_order_save_queue_transaction>
            <sales_order_save_change_status>
                <observers>
                    <fcontrol_observer>
                        <class>fcontrol/observer</class>
                        <method>changeStatusOrder</method>
                    </fcontrol_observer>
                </observers>
            </sales_order_save_change_status>
            <sales_order_save_capture_results>
                <observers>
                    <fcontrol_observer>
                        <class>fcontrol/observer</class>
                        <method>captureOrder</method>
                    </fcontrol_observer>
                </observers>
            </sales_order_save_capture_results>
            <sales_order_save_confirmed_return>
                <observers>
                    <fcontrol_observer>
                        <class>fcontrol/observer</class>
                        <method>queueOrder</method>
                    </fcontrol_observer>
                </observers>
            </sales_order_save_confirmed_return>
        </events>
    </frontend>
    <crontab>
        <jobs>
            <fcontrol_observer_capture_results>
                <schedule>
                    <cron_expr>*/15 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>fcontrol/observer::captureOrder</model>
                </run>
            </fcontrol_observer_capture_results>
            <fcontrol_observer_queue_transaction>
                <schedule>
                    <cron_expr>*/10 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>fcontrol/observer::queueListOrder</model>
                </run>
            </fcontrol_observer_queue_transaction>
            <fcontrol_observer_check_status>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>fcontrol/observer::checkStatusFrame</model>
                </run>
            </fcontrol_observer_check_status>
        </jobs>
    </crontab>
    <admin>
        <routers>
            <fcontrol>
                <use>admin</use>
                <args>
                    <module>Fcontrol_Payu_Adminhtml</module>
                    <frontName>fcontrol</frontName>
                </args>
            </fcontrol>
            <adminhtml>
                <args>
                    <modules>
                        <Fcontrol_Payu before="Mage_Adminhtml">Fcontrol_Payu_Adminhtml</Fcontrol_Payu>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>